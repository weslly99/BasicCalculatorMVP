<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="4"
    android:layout_row="7"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/key_history_tv"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginLeft="16dp"
        android:layout_row="0"
        tools:text="History"
        />

    <ImageView
        android:layout_width="@dimen/backspace"
        android:layout_height="@dimen/backspace"
        android:layout_column="3"
        android:layout_gravity="right"
        android:layout_row="0"
        android:src="@drawable/ic_backspace_grey600_24dp"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:background="#ea6f6f"
        android:gravity="center"
        tools:text="C"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:background="#5523"
        android:gravity="center"
        tools:text="("/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:gravity="center"
        tools:text=")"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:background="#a9d9"
        android:gravity="center"
        tools:text="\u00F7"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:background="#ea6f6f"
        android:gravity="center"
        tools:text="7"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:background="@color/keyboard_grey"
        android:gravity="center"
        tools:text="8"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:gravity="center"
        tools:text="9"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:background="#a9d9"
        android:gravity="center"
        tools:text="\u00D7"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:background="#ea6f6f"
        android:gravity="center"
        tools:text="4"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:background="#5523"
        android:gravity="center"
        tools:text="5"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:gravity="center"
        tools:text="6"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:background="#a9d9"
        android:gravity="center"
        tools:text="\u2212"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:background="#ea6f6f"
        android:gravity="center"
        tools:text="1"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:background="#5523"
        android:gravity="center"
        tools:text="2"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:gravity="center"
        tools:text="3"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:background="#a9d9"
        android:gravity="center"
        tools:text="\u002B"
        />


    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:layout_row="5"
        android:background="#ea6f6f"
        android:gravity="center"
        tools:text="."/>
    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:layout_row="5"
        android:foreground="#5523"
        android:gravity="center"
        tools:text="0"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="2"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:layout_row="5"
        android:gravity="center"
        tools:text="\u00B1"
        />
    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="50dp"
        android:layout_column="3"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:layout_row="5"
        android:background="#a9d9"
        android:gravity="center"
        tools:text="="
        />
    <android.support.v4.widget.Space
        android:layout_columnWeight="0.25"
        android:layout_column="0"
        android:layout_row="6"/>
    <android.support.v4.widget.Space
        android:layout_column="1"
        android:layout_row="6"/>
    <android.support.v4.widget.Space
        android:layout_column="2"
        android:layout_row="6"/>
    <android.support.v4.widget.Space
        android:layout_column="3"
        android:layout_row="6"/>
    <android.support.v4.widget.Space
        android:layout_column="4"
        android:layout_row="6"/>
</GridLayout>