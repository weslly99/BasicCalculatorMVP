<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_column="4"
    android:layout_row="4"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/clean_tv"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:background="@color/keyboard_red"
        android:gravity="center"
        android:text="C"/>

    <TextView
        android:id="@+id/left_parenthesis_tv"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:background="@color/keyboard_deep_blue"
        android:gravity="center"
        android:text="("/>

    <TextView
        android:id="@+id/right_parenthesis_tv"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:gravity="center"
        android:text=")"
        />

    <TextView
        android:id="@+id/division_sign_tv"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:background="@color/keyboard_green"
        android:gravity="center"
        android:text="\u00F7"
        />

    <TextView
        android:id="@+id/seven_digit_tv"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:background="@color/keyboard_red"
        android:gravity="center"
        android:text="7"/>

    <TextView
        android:id="@+id/eigth_digit_tv"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:background="@color/keyboard_deep_blue"
        android:gravity="center"
        android:text="8"/>

    <TextView
        android:id="@+id/nine_digit_tv"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:gravity="center"
        android:text="9"
        />

    <TextView
        android:id="@+id/multiply_sign_tv"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="1"
        android:background="@color/keyboard_green"
        android:gravity="center"
        android:text="\u00D7"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:background="@color/keyboard_red"
        android:gravity="center"
        android:text="4"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:background="@color/keyboard_deep_blue"
        android:gravity="center"
        android:text="5"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:gravity="center"
        android:text="6"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="2"
        android:background="@color/keyboard_green"
        android:gravity="center"
        android:text="\u2212"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:background="@color/keyboard_red"
        android:gravity="center"
        android:text="1"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:background="@color/keyboard_deep_blue"
        android:gravity="center"
        android:text="2"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:gravity="center"
        android:text="3"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="3"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="3"
        android:background="@color/keyboard_green"
        android:gravity="center"
        android:text="\u002B"
        />


    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="0"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:background="@color/keyboard_red"
        android:gravity="center"
        android:text="."/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="1"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:background="@color/keyboard_deep_blue"
        android:gravity="center"
        android:text="0"/>

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="2"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:gravity="center"
        android:text="\u00B1"
        />

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_height="@dimen/button_heigth"
        android:layout_column="3"
        android:layout_columnWeight="0.25"
        android:layout_gravity="fill_horizontal"
        android:layout_row="4"
        android:background="@color/keyboard_green"
        android:gravity="center"
        android:text="="
        />
</GridLayout>